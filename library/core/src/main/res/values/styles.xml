<resources>

    <style name="BaseTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/josefinsans_regular</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="SecondaryTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/josefinsans_regular</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/buttonPrimaryHeight</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/josefinsans_bold</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textSize">38sp</item>
        <item name="android:autoSizeMaxTextSize">38sp</item>
        <item name="android:autoSizeMinTextSize">20sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/josefinsans_bold</item>
        <item name="android:textColor">@color/blue_whale</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseImageButton">
        <item name="android:layout_width">@dimen/commonIconSize</item>
        <item name="android:layout_height">@dimen/commonIconSize</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@null</item>
    </style>


</resources>